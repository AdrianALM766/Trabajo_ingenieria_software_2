<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="880.0" styleClass="lineasHBox" stylesheets="@../CSS/EstilosProductos.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.ItemProductosController">
   <children>
      <Label fx:id="contadorProductos" alignment="CENTER" prefHeight="43.0" prefWidth="50.0" text="1">
         <font>
            <Font name="DejaVu Sans Condensed" size="13.0" />
         </font>
      </Label>
      <Label fx:id="nombre" prefHeight="43.0" prefWidth="280.0" text="Bandas de boxer" wrapText="true">
         <font>
            <Font name="DejaVu Sans Condensed" size="13.0" />
         </font>
      </Label>
      <Label fx:id="cantidad" prefHeight="43.0" prefWidth="65.0" text="10">
         <font>
            <Font name="DejaVu Sans Condensed" size="13.0" />
         </font>
      </Label>
      <Label fx:id="precio" alignment="CENTER" prefHeight="43.0" prefWidth="130.0" text="10000000">
         <font>
            <Font name="DejaVu Sans Condensed" size="13.0" />
         </font>
      </Label>
      <Label fx:id="lugar" prefHeight="43.0" prefWidth="243.0" text="Estanteria A1">
         <font>
            <Font name="DejaVu Sans Condensed" size="13.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="43.0" prefWidth="110.0">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#onEliminarClick" prefHeight="30.0" prefWidth="25.0" styleClass="btnCrud" stylesheets="@../CSS/EstilosProductos.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Imagenes/icon-borra.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#onModificarClick" prefHeight="30.0" prefWidth="27.0" styleClass="btnCrud" stylesheets="@../CSS/EstilosProductos.css">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Imagenes/icon-editar.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="27.0" styleClass="btnCrud" stylesheets="@../CSS/EstilosProductos.css">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Imagenes/icon-ver-informacion.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
